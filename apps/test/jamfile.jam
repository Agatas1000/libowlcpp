project apps/test
   :  build-dir $(OUT)/apps
   : requirements
;

run
      ../find_ontologies.cpp
   : #args
      $(SMPL_DATA)
   : #input-files
   : #requirements
      <link>static
      <library>/owlcpp//io
   : #target-name
      find_owl_1
;

run
      ../find_ontologies.cpp
   : #args
      $(SMPL_DATA)
   : #input-files
   : #requirements
      <link>shared
      <library>/owlcpp//io
   : #target-name
      find_owl_2
;

run
      ../print_triples.cpp
   : #args
      $(SMPL_DATA)/test_01.owl
   : #input-files
   : #requirements
      <link>static
      <library>/owlcpp//io
      <library>/boost/program_options
   : #target-name
      print_triples_1
;

run
      ../print_classes.cpp
   : #args
      -i
      $(SMPL_DATA)/one_eq_two_01.owl
   : #input-files
   : #requirements
      <link>static
      <library>/owlcpp//io
      <library>/boost/program_options
   : #target-name
      print_classes_1
;

run
      ../validate.cpp
   : #args
      -S
      $(SMPL_DATA)/test_01.owl 
   : #input-files
   : #requirements
      <link>static
      <library>/owlcpp//io
      <library>/owlcpp//logic
      <library>/boost/program_options
   : #target-name
      validate_1
;

run-fail
      ../validate.cpp
   : #args
      -S
      $(SMPL_DATA)/one_eq_two_01.owl 
   : #input-files
   : #requirements
      <link>static
      <library>/owlcpp//io
      <library>/owlcpp//logic
      <library>/boost/program_options
   : #target-name
      validate_2
;
