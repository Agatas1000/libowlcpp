# owl_cpp/external/factpp/jamfile.jam

if ! $(FACT_PP_LIB) { EXIT "install FaCT++ library and set location for FACT_PP_LIB; see doc/user-config.jam" ; }

local FACT_KERNEL_SRC = $(FACT_PP_LIB)/src/Kernel/ ;
local FACT_SRC = $(FACT_PP_LIB)/src/ ;

project 
   : source-location $(FACT_SRC)
;

local KERNEL_SRC = 
   [ glob Kernel/*.cpp ]
;

lib factpp
   :  #sources
      $(KERNEL_SRC)
      
   :  #requirements
      
   :  #default build options
   
   :  #usage requirements
      <include>$(FACT_KERNEL_SRC)
;
