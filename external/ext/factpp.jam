import extension ;

import property ;
import project ;
import feature ;
import common ;

extension.declare factpp ;

rule init ( version ? : location : options * )
{
    version ?= default ;
    
    local kernel_location = $(location)/src/Kernel ;
    
    local requirements = [ 
        extension.define factpp $(version) 
        : $(kernel_location) 
        : $(options) 
    ] ;
    
    local src = [ glob $(kernel_location)/*.cpp : parseTime.cpp ] ;
    
    lib factpp_kernel
        :   $(src)
        :   $(requirements)
        :   
        :   <include>$(kernel_location)
        ;
}
