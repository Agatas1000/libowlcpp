import path ;
local smpl_dir = [ path.make $(SMPL_DATA) ] ;
local tmp_dir = [ path.make $(TEMP_DIR) ] ;
project
   : 
   : requirements
      <include>../
      <library>/boost//unit_test_framework
      <library>/boost//filesystem
      <library>..//lib_owl_cpp
      <library>../..//factpp_kernel
      <define>SAMPLE_DATA_DIR="\"$(smpl_dir)\""
      <define>TEMPORARY_DIR="\"$(tmp_dir)\""
;

import testing ;

rule run-all ( sources * )
{
   for local source in $(sources)
   {
       return [ run $(source) ] ;
   }
}

local auto_run_src = [ glob *_run.cpp ] ;

test-suite simple_tests
    :
        [ run-all 
            $(auto_run_src)
#         factpp_05_run.cpp
        ]
;

test-suite all_tests
   :
#     [ run test_01.cpp ]
;

